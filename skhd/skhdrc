# changing window focus
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east

# change focus between external displays (left and right)
alt - s : yabai -m display --focus west
alt - g : yabai -m display --focus east

# Modifying the Layout

# rotate layout clockwise
ctrl + alt - r : yabai -m space --rotate 270

# flip along y-axis
ctrl + alt - y : yabai -m space --mirror y-axis

# flip along x-axis
ctrl + alt - x : yabai -m space --mirror x-axis
# toggle window float
ctrl + alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# modifying window size

# maximize a window
ctrl + alt - m : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
ctrl + alt - e : yabai -m space --balance

# moving window around

# swap windows
ctrl + alt - j : yabai -m window --swap south
ctrl + alt - k : yabai -m window --swap north
ctrl + alt - h : yabai -m window --swap west
ctrl + alt - l : yabai -m window --swap east

# move window and split
cmd + alt - j : yabai -m window --warp south
cmd + alt - k : yabai -m window --warp north
cmd + alt - h : yabai -m window --warp west
cmd + alt - l : yabai -m window --warp east

# move window to diplay left and right
ctrl + alt - s : yabai -m window --display west; yabai -m display --focus west;
ctrl + alt - g : yabai -m window --display east; yabai -m display --focus east

# move window to prev and next space 
ctrl + alt - p : yabai -m window --space prev;
ctrl + alt - n : yabai -m window --space next;

# move window to space #
ctrl + alt - 1 : yabai -m window --space 1;
ctrl + alt - 2 : yabai -m window --space 2;
ctrl + alt - 3 : yabai -m window --space 3;
ctrl + alt - 4 : yabai -m window --space 4;
ctrl + alt - 5 : yabai -m window --space 5;
ctrl + alt - 6 : yabai -m window --space 6;
ctrl + alt - 7 : yabai -m window --space 7;

# starting and stopping yabai

ctrl + alt - q : yabai --stop-service
ctrl + alt - s : yabai --start-service

# resize windows with keyboard
ctrl + cmd - h : yabai -m window west --resize right:-20:0 2> /dev/null || yabai -m window --resize right:-20:0
ctrl + cmd - j : yabai -m window north --resize bottom:0:20 2> /dev/null || yabai -m window --resize bottom:0:20
ctrl + cmd - k : yabai -m window south --resize top:0:-20 2> /dev/null || yabai -m window --resize top:0:-20
ctrl + cmd - l : yabai -m window east --resize left:20:0 2> /dev/null || yabai -m window --resize left:20:0

